<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemomic.Pages.FlexLayoutPage"
             Title="FlexLayoutPage">
    <FlexLayout Direction="Column"
            JustifyContent="Center"
            AlignItems="Center">
        <Rectangle WidthRequest="100"
                   HeightRequest="100"
                   BackgroundColor="Black"></Rectangle>
        <Rectangle WidthRequest="100"
                   HeightRequest="100"
                   BackgroundColor="Green"></Rectangle>
        <Border Stroke="Black"
                StrokeThickness="4"
                Margin="20">
            <Rectangle WidthRequest="100"
                       HeightRequest="100"
                       BackgroundColor="Red"></Rectangle>
        </Border>
    </FlexLayout>
</ContentPage>