<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiDemomic.ViewModel"
             x:Class="MauiDemomic.Pages.RegistrationPage"
             Shell.NavBarIsVisible="False"
             Title="ลงทะเบียนเรียน">

    <ContentPage.BindingContext>
        <!-- อ้างอิง BindingContext ไปที่ RegistrationViewModel -->
        <viewmodel:RegistrationViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="20">
        <!-- ภาพพื้นหลัง -->
        <Image Source="bg6.jpg"
               Aspect="AspectFill"
               Opacity="0.8"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

        <VerticalStackLayout Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

            <!-- ช่องค้นหาวิชา -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="ค้นหาวิชา"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       TextColor="White"
                       WidthRequest="80"/>
                <Entry Placeholder="พิมพ์รหัสวิชาหรือชื่อวิชา"
                       Text="{Binding SearchQuery}"
                       TextColor="Black"
                       BackgroundColor="White"
                       HeightRequest="45"/>
            </StackLayout>

            <!-- แสดงรายการรหัสวิชาหลังจากค้นหา -->
            <Frame Padding="10"
                   CornerRadius="10"
                   BackgroundColor="Black"
                   Opacity="0.85"
                   HorizontalOptions="Center"
                   WidthRequest="350">
                <VerticalStackLayout Spacing="10">
                    <Label Text="เลือกวิชาที่ต้องการลงทะเบียน"
                           TextColor="White"
                           FontSize="16"
                           HorizontalOptions="Center"/>

                    <Picker ItemsSource="{Binding FilteredCourseCodes}"
                            SelectedItem="{Binding SelectedCourseCode}"
                            BackgroundColor="White"
                            TextColor="Black"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>

            <!-- เลือกเทอม -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="Semester"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       TextColor="White"
                       WidthRequest="80"/>
                <Picker ItemsSource="{Binding Semesters}"
                        SelectedItem="{Binding SelectedSemester}"
                        BackgroundColor="White"
                        TextColor="Black"
                        HeightRequest="45"/>
            </StackLayout>

            <!-- ปุ่มลงทะเบียนเรียน -->
            <Button Text="ลงทะเบียนเรียน"
                    BackgroundColor="#FFEC2121"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="50"
                    FontSize="16"
                    Padding="20"
                    FontAttributes="Bold"
                    HorizontalOptions="FillAndExpand"
                    Command="{Binding RegisterCommand}" />

            <!-- ปุ่มดูข้อมูลลงทะเบียน -->
            <Button Text="ดูข้อมูลลงทะเบียน"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="50"
                    FontSize="16"
                    Padding="20"
                    FontAttributes="Bold"
                    HorizontalOptions="FillAndExpand"
                    Command="{Binding GoToRegistrationInfoCommand}" />

            <!-- แสดงข้อความการลงทะเบียน -->
            <Label Text="{Binding RegistrationDetails}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="White"
                   FontSize="16" 
                   Margin="10,20,10,10"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
