<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiDemomic.ViewModel"
             x:Class="MauiDemomic.Pages.ViewProfile"
             Shell.NavBarIsVisible="False"
             Title="โปรไฟล์">

    <ContentPage.BindingContext>
        <viewmodel:ViewProfileViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <!-- ภาพพื้นหลัง -->
        <Image Source="bg6.jpg"
               Aspect="AspectFill"
               Opacity="0.8"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>

        <!-- โครงสร้าง Grid -->
        <Grid Padding="20">
            <VerticalStackLayout Spacing="25" VerticalOptions="Center" HorizontalOptions="Center">

                <!-- รูปโปรไฟล์ -->
                <Image Source="user_avatar.png"
                       WidthRequest="120"
                       HeightRequest="120"
                       Aspect="AspectFill"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,10"/>

                <!-- ชื่อผู้ใช้ -->
                <Label Text="{Binding FullName}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>

                <!-- อีเมล -->
                <Label Text="{Binding Email}"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"/>

                <!-- ปุ่มแก้ไขโปรไฟล์ -->
                <Button Text="แก้ไขโปรไฟล์"
                        BackgroundColor="#FFEC2121"
                        TextColor="White"
                        CornerRadius="20"
                        HeightRequest="50"
                        FontSize="16"
                        Padding="10"
                        FontAttributes="Bold"
                        Command="{Binding EditProfileCommand}" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
